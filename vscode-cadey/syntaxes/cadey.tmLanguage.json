{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Cadey",
  "patterns": [
    {
      "include": "#macro"
    }
  ],
  "repository": {
    "macro": {
      "patterns": [
        {
          "begin": "(?<!\\\\)\\[(?!:)",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.array.begin.cadey"
            }
          },
          "end": "\\]",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.array.end.cadey"
            }
          },
          "name": "meta.structure.array.cadey",
          "patterns": [
            {
              "include": "#macro"
            },
            {
              "include": "#builtins"
            },
            {
              "begin": "[a-zA-Z0-9-.]+",
              "end": "\\s*(?=\\])",
              "beginCaptures": {
                "0": {
                  "name": "entity.name.function"
                }
              },
              "patterns": [
                {
                  "include": "#keyword"
                },
                {
                  "include": "#link"
                },
                {
                  "include": "#macro"
                }
              ]
            }
          ]
        },
        {
          "include": "#keyword"
        },
        {
          "include": "#link"
        }
      ]
    },
    "keyword": {
      "patterns": [
        {
          "begin": "(?<!\\[|\\\\):[a-zA-Z0-9-.]+",
          "end": "[^ \\[\\]]+",
          "beginCaptures": {
            "0": {
              "name": "variable.parameter"
            }
          },
          "endCaptures": {
            "0": {
              "name": "storage"
            }
          }
        },
        {
          "match": "(?<!\\\\):[a-zA-Z0-9-.]+",
          "name": "variable.parameter"
        }
      ]
    },
    "link": {
      "match": "(https?|ftp)://[^ ]+",
      "name": "markup.underline.link"
    },
    "builtins": {
      "patterns": [
        {
          "begin": "bold",
          "end": "\\s*(?=\\])",
          "beginCaptures": {
            "0": {
              "name": "support.function"
            }
          },
          "name": "markup.bold",
          "patterns": [
            {
              "include": "#keyword"
            },
            {
              "include": "#macro"
            }
          ]
        },
        {
          "begin": "italic",
          "end": "\\s*(?=\\])",
