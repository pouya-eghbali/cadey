          "beginCaptures": {
            "0": {
              "name": "support.function"
            }
          },
          "patterns": [
            {
              "begin": ":language",
              "end": "\\s*(?=\\])",
              "beginCaptures": {
                "0": {
                  "name": "variable.parameter"
                }
              },
              "patterns": [
                {
                  "include": "#code-blocks"
                }
              ]
            },
            {
              "include": "#keyword"
            }
          ]
        }
      ]
    },
