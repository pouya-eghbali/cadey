html, body
  width 100%
  height 100%
  padding 0
  margin 0
  background #6272a4

body
  display flex
  flex-direction column
  align-items center

body > .row
  width 1200px
  h1
    font-family "Montserrat"
    font-size 4em


#editor
  height 600px
  width 520px
  border none
  cursor text
  outline none

.token.parameter
  color #f8f8f2

.playground-container
  display flex
  align-items center
  justify-content center

#playground
  display flex
  border-radius 6px
  box-shadow 0px 0px 24px rgba(0,0,0,0.7)
  background #282a36
  width 1200px
  color #f8f8f2
  font-family "Open Sans"
  flex-direction column
  overflow hidden
  .panes
    padding 1em
    display flex
    flex-direction row

#live-preview
  padding-left 1em
  overflow-y auto
  height 520px

#live-preview .image-container
  display flex
  align-items center
  justify-content center
  img
    border-radius 5px
    box-shadow 0px 0px 12px rgba(0,0,0,.6)

#live-preview > div:first-of-type
  h1, h2, h3, h4, h5
    margin-top 0

#live-preview > *
  margin-bottom 1em

#live-preview a
  color #ff79c6

#live-preview a:hover
  color #ffb86c

#error
  background #ff5555
  padding 0.25em .5em